generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Level {
  id         String      @id @default(uuid())
  name       String      @unique
  characters Character[]
  scores     Score[]
}

model Character {
  id   String @id @default(uuid())
  name String

  minX Float
  maxX Float
  minY Float
  maxY Float

  levelId String
  level   Level  @relation(fields: [levelId], references: [id])
}

model Score {
  id       String   @id @default(uuid())
  username String
  time     Int
  date     DateTime @default(now())
  levelId  String
  level    Level    @relation(fields: [levelId], references: [id])
}
